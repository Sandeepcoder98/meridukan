<% current_order.latest_items.each do |order_item| %>
  <li class="item first">
    <div class="item-inner">
      <%= link_to order_item.product, class:"product-image" do %>
        <img alt="Sample Product" src="<%= order_item.product.photo_url %>">
      <% end %>
      <div class="product-details">
        <div class="access"><a class="btn-remove1" title="Remove This Item" href="<%=  order_item_path(order_item) %>" data-method="delete" data-remote="true">Remove</a> <a class="btn-edit" title="Edit item" href="#"><i class="icon-pencil"></i><span class="hidden">Edit item</span></a> </div>
        <!--access--> <strong><%= order_item.quantity %></strong> x <span class="price"><%= order_item.unit_price.to_f %> &#8377;</span>
        <p class="product-name"><%= link_to order_item.product.title, order_item.product %></p>
      </div>
    </div>
</li>
<% end %>