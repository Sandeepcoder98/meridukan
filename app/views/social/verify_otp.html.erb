<%= form_tag verified_otp_social_path, class:"active" do %>
  <div class="popup-logo"><h1 class="main-name"><span class="fn">Meri</span> <span class="ln">Dukan</span></h1></div>
  <%= flash_messages %>
  <%= hidden_field_tag :ip_address%>
  <div class="login-box">
    <label>Enter the received OTP</label>
    <%= text_field_tag :otp %>
  </div>
  <div class="bottom">
    <%= submit_tag "Verify OTP" %>
    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-6"><a data-method="put" href="<%=resend_otp_social_path%>" rel="" class="pull-right">Wants to resend OTP ?</a></div>
    </div>
    <div class="clear"></div>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
        $.get("http://ipinfo.io", function(response) {
            $("#ip_address").val(response.ip);
        }, "jsonp");
    })
</script>