<!--<.........................ragister form.........................>-->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class:"register active"}) do |f| %>
  <div class="popup-logo"><h1 class="main-name"><span class="fn">Meri</span> <span class="ln">Dukan</span></h1></div>
  <%= devise_error_messages! %>
  <div class="login-box">
    <label class="<%="#{"error-color" if resource.errors["email"].present?}"%>">Email Address</label>
    <%= f.text_field :email, :class=>"#{"error-field" if resource.errors["email"].present?}" %>
    <label class="<%="#{"error-color" if resource.errors["password"].present?}"%>">Password</label>
    <%= f.password_field :password, autocomplete: "off", class:"#{"error-field" if resource.errors["password"].present?}" %>
    <label class="<%="#{"error-color" if resource.errors["password_confirmation"].present?}"%>">Password Confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"#{"error-field" if resource.errors["password_confirmation"].present?}" %>
  </div>
  <div class="bottom">
    <%= f.submit "Create account" %>
    <div class="clear"></div>
  </div>
<% end %>