<div class="main-container col2-right-layout bounceInUp animated" id="form-steps">
<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <script src="http://maps.googleapis.com/maps/api/js"></script>
          <%set_resource_through_template%>
          <%= form_for(@resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,:role=>"form", class: "registration-form" }) do |f| %>
            <%= devise_error_messages! rescue ""%>      
            <div class="registration-form"> 
              <fieldset>
                <div class="form-top">
                  <div class="form-top-left">
                    <%h1_text= (current_user.has_role? "seller")? "<h3>Personal Information</h3>".html_safe : "<h3>Personal Information</h3>".html_safe %>
                    <%= h1_text%>
                    <p>Tell us who you are:</p>
                  </div>
                  <div class="form-top-right">
                    <i class="fa fa-user"></i>
                  </div>
                </div>
                <div class="form-bottom">
                  <div class="form-group file_browse_wrapper">
                    <%= f.file_field :avatar, class: "form-avatar form-control", id: "form-avatar"%>
                  </div>
                  <div class="form-group">
                     <%= f.text_field :first_name, :placeholder=> "First name...", class: "form-first-name form-control", id: "form-first-name"%>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :last_name,  placeholder: "Last name...",  class: "form-last-name form-control", id: "form-last-name"%>
                  </div>

                  <div class="form-group">
                    <%= f.email_field :email,  placeholder: "Email...", class: "form-email form-control"%>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :mobile, placeholder: "Mobile", class: "form-about-yourself form-control",:disabled=>true%>
                  </div>
  
                  <center><button type="button" class="btn btn-next" onclick="setTimeout(initializeGmap,[1000])">Next</button></center>
                </div>
              </fieldset>
              <fieldset>
                <div class="form-top">
                  <div class="form-top-left">
                    <%text = (current_user.has_role? "seller")? "<h3>Store Information</h3>".html_safe : "<h3>Personal Address</h3>".html_safe %>
                    <%= text%>
                    <p>Set up your address:</p>
                  </div>
                  <div class="form-top-right">
                    <i class="fa fa-info-circle"></i>
                  </div>
                </div>
                <div class="form-bottom">
                  <div class="form-group">
                    <h5>Madhya Pradesh</h5>
                    </div>
                  <div class="form-group">
                    <h5>Indore</h5>
                  </div>
                  <div class="form-group">
                      <%= f.text_field :address, placeholder: "Street Address", class: "form-address form-control", id: "street-address"%>
                    </div>

                    <div class="form-group">
                    </div>

                    <div class="form-group">
                      <%= f.number_field :pin_code, placeholder: "Pincode", class: "form-address form-control", id: "form-address"%>
                    </div>
                  <center><button type="button" class="btn btn-previous">Previous</button>
                  <%if current_user.has_role? "seller"%>
                    <button type="button" class="btn btn-next">Next</button></center>
                    <%else%>
                      <%= f.submit "Submit",class: "btn signup"%>
                    <%end%>
                </div>
              </fieldset>
              <%if current_user.has_role? "seller"%>    
                <fieldset>
                  <div class="form-top">
                    <div class="form-top-left">
                      <h3>Shop Address</h3>
                      <p>Your Store Details:</p>
                    </div>
                    <div class="form-top-right">
                      <i class="fa fa-map-marker"></i>

                    </div>
                  </div>

                  <%= f.fields_for :store do |store_f| %>
                  <div class="form-bottom">
                    <div class="row"> 
                      <div class="col-md-6"> 
                        <div class="form-group file_logo_wrapper">
                          <%= store_f.file_field :logo, class: "form-logo form-control", id: "form-logo"%>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group file_cover_wrapper">
                          <%= store_f.file_field :cover, class: "form-cover form-control",  id: "form-cover"%>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= store_f.text_field :name,placeholder: "Store's Name...",class: "form-address form-control",id: "form-address",:required=>true%>
                    </div>

                    <div class="form-group">
                      <%= store_f.text_field :address,placeholder: "Street Address",class: "form-address form-control",id: "form-address",:required=>true%>
                    </div>

                    <div class="form-group">
                      <h5>Madhya Pradesh</h5>  
                    </div>

                    <div class="form-group">
                      <h5>Indore</h5>
                    </div>

                    <div class="form-group">
                      <%= store_f.number_field :pin_code,placeholder: "Pincode",class: "form-address form-control",id: "form-address"%>
                    </div>
                    <%end%>
                    <center>
                    <button type="button" class="btn btn-previous">Previous</button>
                    <%= f.submit "Submit",class: "btn signup"%></center>
                  </div>
                </fieldset>
              <%end%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
