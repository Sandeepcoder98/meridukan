<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"forgot_password active" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="popup-logo"><h1 class="main-name"><span class="fn">Meri</span> <span class="ln">Dukan</span></h1></div>
  <%= flash_messages %>

  <div>
    <%= f.text_field :mobile, autofocus: true %>
  </div>
  <div class="bottom">
    <%= f.submit "Reset password" %>
    <a href="<%=new_session_path(resource_name)%>" rel="login">Suddenly remebered? Log in here</a> <a href="<%=new_registration_path(resource_name)%>" rel="register">You don't have an account? Register here</a>
    <div class="clear"></div>
  </div>
<% end %>