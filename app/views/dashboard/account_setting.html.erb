<div id="preloader">
  <div id="status"><i class="fa fa-spinner fa-spin"></i></div>
</div>
<section>
  <!-- leftpanel -->
  <div class="mainpanel">
    <div class="pageheader">
      <h2><i class="fa fa-envelope"></i> Account Settings <span>Subtitle goes here...</span></h2>
      <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li class="active">Dashboard</li>
        </ol>
      </div>
    </div>
    <div class="contentpanel">
      <div class="col-lg-12 col-md-12 col-sm-8 col-xs-12 setting-tab-container">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 setting-tab-menu">
          <div class="list-group"> 
            <%=render '/dashboard/shared/setting_left_panel'%>
          </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
          <div class="well" id="setting-form">
            <form class="form-horizontal" action="" method="post">
              <h4>Profile Information</h4>
              <p></p>
              <!-- Name input-->
              <div class="form-group">
                <label class="col-md-3" for="name">Full Name</label>
                <div class="col-md-9">
                  <input id="name" name="name" type="text" placeholder="Your name" class="input-text">
                </div>
              </div>
              <!-- Email input-->
              <div class="form-group">
                <label class="col-md-3" for="email">Email</label>
                <div class="col-md-9">
                  <input id="email" name="email" type="text" placeholder="jhon@test.com" class="input-text">
                </div>
              </div>
              <div class="form-divi"></div>
              <div class="row">
                <div class="col-md-4">
                  <label>Notifications</label>
                </div>
                <div class="col-md-4">
                  <label>Type</label>
                  <p>Inbox messages</p>
                  <p>Order messages</p>
                  <p>Order statuses</p>
                </div>
                <div class="col-md-4">
                  <label>Email</label>
                  <div class="ckbox ckbox-primary">
                    <input type="checkbox" id="inbox_messages" value="m" name="int[]" required />
                    <label for="inbox_messages"></label>
                  </div>
                  <!-- rdio -->
                  <div class="ckbox ckbox-primary">
                    <input type="checkbox" value="f" id="order_messages" name="int[]" />
                    <label for="order_messages"></label>
                  </div>
                  <!-- rdio -->
                  <div class="ckbox ckbox-primary">
                    <input type="checkbox" value="f" id="order_statuses" name="int[]" />
                    <label for="order_statuses"></label>
                  </div>
                  <!-- rdio --> 
                </div>
              </div>
              <div class="form-divi"></div>
              <h4>Billing Information</h4>
              <p>Provide the following information to receive invoices on a monthly basis via email:</p>
              <div class="form-group">
                <label class="col-md-3" for="name">Full name/Business name</label>
                <div class="col-md-9">
                  <input id="name" name="name" type="text" placeholder="" class="input-text">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">Full address</label>
                <div class="col-md-9">
                  <input id="address" name="address" type="text" placeholder="" class="input-text">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">Country</label>
                <div class="col-md-9">
                  <select name="" class="input-text">
                    <option>India</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">VAT ID number*</label>
                <div class="col-md-9">
                  <input id="" name="" type="text" placeholder="" class="input-text">
                </div>
              </div>
              <div class="checkbox">
                <label>
                <input type="checkbox">
                I'm interested in receiving invoices for my payments </label>
              </div>
              <!-- Form actions -->
              <div class="form-divi"></div>
              <div class="form-group">
                <div class="col-md-12 text-right">
                  <button type="submit" class="save-changes">Save Changes</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- contentpanel --> 
  </div>
  <!-- mainpanel --> 
</section>
<script type="text/javascript">
  function performClick(elemId) {
    var elem = document.getElementById(elemId);
    if(elem && document.createEvent) {
       var evt = document.createEvent("MouseEvents");
       evt.initEvent("click", true, false);
       elem.dispatchEvent(evt);
    }
  }
  
  function readURL(input) {
     if (input.files && input.files[0]) {
         var reader = new FileReader();
         
         reader.onload = function (e) {
             $('#seller-pic').attr('src', e.target.result);
         }
         
         reader.readAsDataURL(input.files[0]);
     }
  }
  
  $("#profile-imp").change(function(){
     readURL(this);
  });
  $('#seller-pic').click(function(){  $('#profile-imp').click()  });
  </script>