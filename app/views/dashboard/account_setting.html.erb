<!-- Preloader -->
<div id="preloader">
  <div id="status"><i class="fa fa-spinner fa-spin"></i></div>
</div>
<section>
  <!-- leftpanel -->
  <div class="mainpanel">
    <div class="pageheader">
      <h2><i class="fa fa-envelope"></i> Account Settings <span>Subtitle goes here...</span></h2>
      <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
          <li><a href="index.html">Home</a></li>
          <li class="active">Dashboard</li>
        </ol>
      </div>
    </div>
    <div class="contentpanel">
      <div class="col-lg-12 col-md-12 col-sm-8 col-xs-12 setting-tab-container">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 setting-tab-menu">
          <div class="list-group"> 
            <%=render '/dashboard/shared/setting_left_panel'%>
          </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        <%set_resource_through_template%>
          <div class="well" id="setting-form">
            <%= form_for(@resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,:role=>"form", class: "registration-form" }) do |f| %>
              <%= devise_error_messages! rescue ""%>      
              <h4>Profile Information</h4>
              <p></p>
              <!-- Name input-->
              <div class="form-group">
                <label class="col-md-3" for="name">First Name</label>
                <div class="col-md-9">
                  <%= f.text_field :first_name, :placeholder=> "First name...", class: "form-first-name input-text", id: "form-first-name"%>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">Last Name</label>
                <div class="col-md-9">
                  <%= f.text_field :last_name, :placeholder=> "First name...", class: "form-first-name input-text", id: "form-first-name"%>
                </div>
              </div>
              <!-- Email input-->
              <div class="form-group">
                <label class="col-md-3" for="email">Email</label>
                <div class="col-md-9">
                   <%= f.email_field :email, :placeholder=> "First name...", class: "form-first-name input-text", id: "form-first-name"%>
                </div>
              </div>
              <div class="form-divi"></div>
              <div class="row">
                <div class="col-md-4">
                  <label>Notifications</label>
                </div>
                <div class="col-md-4">
                  <label>Type</label>
                  <p>Inbox messages</p>
                  <p>Order messages</p>
                  <p>Order statuses</p>
                </div>
                <div class="col-md-4">
                  <label>Email</label>
                  <div class="ckbox ckbox-primary">
                    <input type="checkbox" id="inbox_messages" value="m" name="int[]"  />
                    <label for="inbox_messages"></label>
                  </div>
                  <!-- rdio -->
                  <div class="ckbox ckbox-primary">
                    <input type="checkbox" value="f" id="order_messages" name="int[]" />
                    <label for="order_messages"></label>
                  </div>
                  <!-- rdio -->
                  <div class="ckbox ckbox-primary">
                    <input type="checkbox" value="f" id="order_statuses" name="int[]" />
                    <label for="order_statuses"></label>
                  </div>
                  <!-- rdio --> 
                </div>
              </div>
              <div class="form-divi"></div>
              <h4>Billing Information</h4>
              <p>Provide the following information to receive invoices on a monthly basis via email:</p>
              <div class="form-group">
                <label class="col-md-3" for="name">Full name/Business name</label>
                <div class="col-md-9">
                  <input id="name" name="name" type="text" placeholder="" class="input-text">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">Full address</label>
                <div class="col-md-9">
                  <input id="address" name="address" type="text" placeholder="" class="input-text">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">Country</label>
                <div class="col-md-9">
                  <select name="" class="input-text">
                    <option>India</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3" for="name">VAT ID number*</label>
                <div class="col-md-9">
                  <input id="" name="" type="text" placeholder="" class="input-text">
                </div>
              </div>
              <div class="checkbox">
                <label>
                <input type="checkbox">
                I'm interested in receiving invoices for my payments </label>
              </div>
              <!-- Form actions -->
              <div class="form-divi"></div>
              <div class="form-group">
                <div class="col-md-12 text-right">
                  <%= f.submit "Save Canges", class: "btn btn-danger" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
