<section class="login-back">
  <div id="animate-area"></div>
  <div class="container-fluid">
    <div class="buyers-left">
      <img src="../assets/Login-buyes-step.png" >
    </div>
    <div class="col-md-4 col-md-push-8">
      <div class="buyers-login-right">
        <div>
          <center>
            <a href="/">
              <img src="../assets/meridookan-big.png" width="165" height="">
            </a>
          </center>
        </div>
        <div class="login-wrapper">
          <div class="content">
            <div id="form_wrapper" class="form_wrapper"> 
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name,:role=>params[:role]), html:{ class:"register active"}) do |f| %>
                <%= devise_error_messages! %>
                <%= flash_messages %>
                <div class="login-box">
                  <label class="<%="#{"error-color" if resource.errors["mobile"].present?}"%>">Mobile (+91)</label>
                  <%= f.text_field :mobile, :class=>"#{"error-field" if resource.errors["mobile"].present?}", :placeholder=>"8871195825" %>
                </div>
                <div class="bottom">
                  <%= f.submit "Create account" %>
                  <div class="clear"></div>
                </div>
              <% end %>
            </div>
            <div class="clear"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="animate-area2"></div>
</section>