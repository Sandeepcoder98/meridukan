<p id="notice"><%= notice %></p>
<h3><%= @admin_category.title %></h3>

<table class="table">
  <thead>
    <tr>
      <th>Sub Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_category.sub_categories.where(:parent_id=>nil).each do |category| %>
      <tr>
        <td><%= category.title%></td>
        <td><%= link_to admin_category_sub_category_path(@admin_category,category) do%>
            <i class="fa fa-eye"></i>
            <%end%>
        </td>
        <td><%= link_to 'Edit', edit_admin_category_sub_category_path(@admin_category,category) %></td>
        <td><%= link_to 'Destroy', admin_category_sub_category_path(@admin_category,category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Category', new_admin_category_sub_category_path(@admin_category.id) %>