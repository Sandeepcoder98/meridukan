<p id="notice"><%= notice %></p>
<h3><%= @admin_category.title %> > <%= @admin_sub_category.title%></h3>

<table class="table">
  <thead>
    <tr>
      <th>Sub Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_sub_category.child_categories.where.not(:parent_id=>nil).each do |category| %>
      <tr>
        <td><%= category.title%></td>
        <td><%= link_to 'Edit', edit_admin_category_sub_category_path(@admin_category,category) %></td>
        <td><%= link_to 'Destroy', admin_category_sub_category_path(@admin_category,category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Category', new_admin_category_sub_category_path(@admin_category.id,:id=>@admin_sub_category) %>

<%= link_to 'Edit', edit_admin_category_sub_category_path(@admin_category,@admin_sub_category) %> |
<%= link_to 'Back', admin_category_sub_category_path %>
