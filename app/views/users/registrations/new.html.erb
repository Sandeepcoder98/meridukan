<!--<.........................ragister form.........................>-->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class:"register active"}) do |f| %>
  <div class="popup-logo"><h1 class="main-name"><span class="fn">Meri</span> <span class="ln">Dukan</span></h1></div>
  <%= devise_error_messages! %>
  <%= flash_messages %>
  <div class="login-box">
    <label class="<%="#{"error-color" if resource.errors["mobile"].present?}"%>">Mobile (+91)</label>
    <%= f.text_field :mobile, :class=>"#{"error-field" if resource.errors["mobile"].present?}", :placeholder=>"8871195825" %>
  </div>
  <div class="bottom">
    <%= f.submit "Create account" %>
    <div class="clear"></div>
  </div>
<% end %>