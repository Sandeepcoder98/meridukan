<div class="headerbar">
  <a class="menutoggle"><i class="fa fa-bars"></i></a>
  <div class="header-right">
    <ul class="headermenu"> 
      <li>
        <span class="notification-lists notification-index">
          <%= render "layouts/notifications/notifications",user_id:  current_user.id%>
        </span>
      </li>      
      <li>
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <%= image_tag asset_path(current_user.avatar.url) %>
            <%= current_user.first_name%>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
            <li>
              <%= link_to ('<i class="glyphicon glyphicon-cog"></i>My Profile').html_safe,public_profile_setting_dashboard_path%>
            </li>
            <li>
              <%= link_to ('<i class="fa fa-home" aria-hidden="true"></i>My Shop').html_safe,my_shop_dashboard_path%> 
            </li>
            <li>
              <%= link_to ('<i class="fa fa-th-large"></i>My Products').html_safe,products_path%>
            </li>
            <li><%= link_to ('<i class="fa fa-sign-out"></i>Sign Out').html_safe, destroy_user_session_path, :method => :delete%></li>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</div>