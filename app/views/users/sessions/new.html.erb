<script type="text/javascript" src="../assets/showjs.js"></script>
<section class="login-back">
  <div id="animate-area"></div>
  <div class="container-fluid">
  <% if params[:role] == "seller" %>
     <div class="sellers-left">
 <div class="col-md-5">
 <img src="../assets/Login-buyes-step2.png" ></div>
  <div class="col-md-7"><h1>Lorem ipsum dolor sit amet, consectetur adipiscing elit</h1>
  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit
quisque tempus ac eget diam et laoreet phasellus ut nisi id leo molestie. adipiscing vitae.</p>
  </div>
 </div>
  <% else %>
    <div class="buyers-left">
      <img src="../assets/Login-buyes-step.png" >
    </div>
    <% end %>
    <div class="col-md-4 col-md-push-8">
      <div class="buyers-login-right">
        <div>
          <center>
            <a href="/">
              <img src="../assets/meridookan-big.png" width="165" height="">
            </a>
          </center>
        </div>
        <div class="login-wrapper">
          <div class="content">
            <div id="form_wrapper" class="form_wrapper"> 
              <%= form_for(resource, as: resource_name, url: session_path(resource_name,:role=>params[:role]), html:{class:"login active"}) do |f| %>
                <%= flash_messages %>
                <%= hidden_field_tag :ip_address%>
                <div class="login-box">
                  <label>Mobile</label>
                   <%= f.text_field :mobile  %>
                  <label>Password</label>
                   <%= f.password_field :password, autocomplete: "off" %>
                </div>
                <div class="bottom">
                  
                  <div class="row">
                    <div class="col-md-6">
                    <%= f.submit "Login" %>
                    </div>
                    <div class="col-md-6"><a href="<%=new_password_path(resource_name)%>" rel="forgot_password" class="forgot-btn">Forgot password?</a></div>
                  </div>
                  <div class="clear"></div>
                </div>
              <% end %>
            </div>
            <div class="clear"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="animate-area2"></div>
</section>
<script type="text/javascript">
  $(document).ready(function(){
    $.get("http://ipinfo.io", function(response) {
      $("#ip_address").val(response.ip);
    }, "jsonp");
  })
</script>