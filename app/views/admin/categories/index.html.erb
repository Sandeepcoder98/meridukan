<p id="notice"><%= notice %></p>

<h1>Listing Admin Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_categories.each do |admin_category| %>
      <tr>
        <td><%= admin_category.title%></td>
        <td><%= link_to admin_category_path(admin_category) do%>
          <i class="fa fa-eye"></i>
        <%end%>
        </td>
        <td><%= link_to edit_admin_category_path(admin_category) do%>
          <i class="fa fa-pencil-square-o"></i>
        <%end%>
        </td>
        <td><%= link_to admin_category_path(admin_category), method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="fa fa-trash-o"></i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path %>